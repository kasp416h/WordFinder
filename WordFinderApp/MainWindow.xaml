<Window x:Class="WordFinderApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Word Finder" Height="300" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Word Length:" Margin="5"/>
            <TextBox Name="WordLengthTextBox" Margin="5" Width="200"/>

            <TextBlock Text="Number of Words:" Margin="5"/>
            <TextBox Name="NumberOfWordsTextBox" Margin="5" Width="200"/>

            <TextBlock Text="File Name:" Margin="5"/>
            <TextBox Name="FileNameTextBox" Margin="5" Width="200"/>

            <Button Name="StartButton" Content="Start" Margin="10" Click="StartButton_Click" Width="200"/>
            <ProgressBar Name="ProgressBar" Margin="10" Height="20"/>
        </StackPanel>
    </Grid>
</Window>
